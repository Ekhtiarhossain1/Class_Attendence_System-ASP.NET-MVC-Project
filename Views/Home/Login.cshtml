@{
    ViewData["Title"] = "Login";
}
<div class="container py-5 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card p-4 shadow-sm border-primary">
                <h2 class="text-center mb-4 fw-bold">Login</h2>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <form asp-action="Login" method="post">
                    <div class="mb-4">
                        <label for="username" class="form-label fw-bold">Username</label>
                        <input type="text" id="username" name="username" class="form-control py-2 px-2" required />
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label fw-bold">Password</label>
                        <input type="password" id="password" name="password" class="form-control py-2 px-2" required />
                    </div>
                    <div class="mb-4">
                        <label for="role" class="form-label fw-bold">Login as</label>
                        <select id="role" name="role" class="form-control py-2 px-2" required>
                            <option value="Teacher">Teacher</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Login page now supports admin/teacher role selection -->
